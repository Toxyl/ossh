                <td><tag class="w3-button w3-text-black bg-color-text-templater w100" onclick="filter_log('text-templater')">text-templater</tag></td>
                <td><tag class="w3-button w3-text-black bg-color-html-templater w100" onclick="filter_log('html-templater')">html-templater</tag></td>
            </tr>
            <tr>
                <td></td>
                <td class="center"><tag class="w3-button w3-text-black bg-color-other w100" onclick="filter_log('*')">Reset</tag></td>
                <td colspan="10"></td>
            </tr>
        </table>
    </div>
    <table id="tConsole"></table>
    <br><br><br><br>
</div>
