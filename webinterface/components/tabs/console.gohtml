                <td><tag class="w3-button w3-text-black bg-color-ui-server w100" onclick="filter_log('ui-server')">ui-server</tag></td>
                <td><tag class="w3-button w3-text-black bg-color-sync-server w100" onclick="filter_log('sync-server')">sync-server</tag></td>
                <td><tag class="w3-button w3-text-black bg-color-sync-client w100" onclick="filter_log('sync-client')">sync-client</tag></td>
                <td><tag class="w3-button w3-text-black bg-color-sync-commands w100" onclick="filter_log('sync-commands')">sync-commands</tag></td>
                <td><tag class="w3-button w3-text-black bg-color-overlay-fs w100" onclick="filter_log('overlay-fs')">overlay-fs</tag></td>
                <td><tag class="w3-button w3-text-black bg-color-payloads w100" onclick="filter_log('payloads')">payloads</tag></td>
                <td><tag class="w3-button w3-text-black bg-color-fake-shell w100" onclick="filter_log('fake-shell')">fake-shell</tag></td>
